{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
      {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-west-1",
      "source_ami": "ami-036eaa74",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "cloudify {{timestamp}}"
    },
  ],
  "provisioners": [
    {
      "type": "shell",
      "only": ["amazon-ebs"],
      "inline": ["mkdir -p /home/ubuntu/.ssh/"]
    },
    {
      "type": "file",
      "only": ["amazon-ebs"],
      "source": "insecure_private_key",
      "destination": "/home/ubuntu/.ssh/"
    },
    {
      "type": "shell",
      "script": "provision.sh"
    }
  ],
  "post-processors": ["vagrant"]
}